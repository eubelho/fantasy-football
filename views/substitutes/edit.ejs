<!DOCTYPE html>
<html lang="en">

</head>

<title>Update Substitute Info</title>

<body>
  <div class="substitutes-edit-header">
    <h1>Edit <%= substitutes.name %> Stats</h1>
  </div>

<ul class="substitute-edit-nav">
  <li class="left"><a href="/substitutes/<%= substitutes.id %>">Back</a></li>
  <li class="left"><a href="/players">Starting XI</a></li>
  <li class="right"><a href="/logout">Logout</a></li>
</ul>

  <div class="substitutes-show-images">
    <% const imageUrl = substitutes.image.startsWith("http") ? new URL(substitutes.image).pathname : substitutes.image; %>
    <% if (substitutes.image.startsWith("http")) { %>
        <img src="<%= substitutes.image %>" alt="Substitutes Image" class="substitutes-img">
    <% } else { %>
        <img src="/<%= substitutes.image %>" alt="Substitutes Image" class="substitutes-img">
    <% } %>
</div>

  <main>
    <div class="substitutes-edit-input">
      <form action="/substitutes/<%= substitutes.id %>?_method=PUT" method="POST">

            <div class="substitutes-edit-details">
                <label for="name"><b>Name:</b></label>
                <input type="text" name="name" value="<%= substitutes.name %>" >

                <label for="position"><b>Position:</b></label>
                <input type="text" name="position" value="<%= substitutes.position %>">

                <label for="number"><b>Category:</b></label>
                <input type="number" name="number" value="<%= substitutes.number %>">

                <label for="Team"><b>Team:</b></label>
                <input type="text" name="team" value="<%= substitutes.team %>">

                <label for="isRetired"><b>Retired:</b></label>
                <input type="text" name="isRetired" value="<%= substitutes.isRetired %>">

                <label for="dateOfBirth"><b>Date of Birth:</b></label>
                <input type="date" name="dateOfBirth" value="<%= substitutes.dateOfBirth %>">

                <label for="country"><b>Country:</b></label>
                <input type="text" name="country" value="<%= substitutes.country %>">
            </div>

            <div class="bottom-button-container">
              <input type="submit" value="Update Substitutes" />
            </div>
          </form> 
        </div>

      </form>
    </div>
  </main>

</body>

</html>