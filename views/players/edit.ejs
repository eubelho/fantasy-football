<!DOCTYPE html>
<html lang="en">

</head>

<title>Update Player Info</title>

<body>
  <div class="players-edit-header">
    <h1> Edit <%= players.name %> Stats</h1>
  </div>

<ul class="players-edit-nav">
  <li class="left"><a href="/players/<%= players.id %>">Back</a></li>
  <li class="left"><a href="/players">Starting XI</a></li>
  <li class="right"><a href="/logout">Logout</a></li>
</ul>

  <div class="players-show-images">
    <% const imageUrl = players.image.startsWith("http") ? new URL(players.image).pathname : players.image; %>
    <% if (players.image.startsWith("http")) { %>
        <img src="<%= players.image %>" alt="Players Image" class="players-img">
    <% } else { %>
        <img src="/<%= players.image %>" alt="Players Image" class="players-img">
    <% } %>
</div>

  <main>
    <div class="players-edit-input">
      <form action="/players/<%= players.id %>?_method=PUT" method="POST">

            <div class="players-edit-details">
                <label for="name"><b>Name:</b></label>
                <input type="text" name="name" value="<%= players.name %>" >

                <label for="position"><b>Position:</b></label>
                <input type="text" name="position" value="<%= players.position %>">

                <label for="number"><b>Category:</b></label>
                <input type="number" name="number" value="<%= players.number %>">

                <label for="Team"><b>Team:</b></label>
                <input type="text" name="team" value="<%= players.team %>">

                <label for="isRetired"><b>Retired:</b></label>
                <input type="text" name="isRetired" value="<%= players.isRetired %>">

                <label for="dateOfBirth"><b>Date of Birth:</b></label>
                <input type="date" name="dateOfBirth" value="<%= players.dateOfBirth %>">

                <label for="country"><b>Country:</b></label>
                <input type="text" name="country" value="<%= players.country %>">
            </div>

            <div class="bottom-button-container">
              <input type="submit" value="Update Player" />
            </div>
          </form> 
        </div>

      </form>
    </div>
  </main>

</body>

</html>